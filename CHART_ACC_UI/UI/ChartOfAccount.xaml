<Window x:Class="CHART_ACC_UI.UI.ChartOfAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chart of Account" Height="521" Width="669" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" KeyUp="Window_KeyUp" Background="{StaticResource GrayWhite}" Closing="Window_Closing" ShowInTaskbar="False">
    <Grid>
        <Label Content="Parent Account" Height="27" HorizontalAlignment="Left" Margin="330,52,0,0" Name="label1" VerticalAlignment="Top" Width="91" />
        <Label Content="Account Name" Height="28" HorizontalAlignment="Left" Margin="331,122,0,0" Name="label2" VerticalAlignment="Top" Width="90" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="422,122,0,0" Name="txtSubAccount" VerticalAlignment="Top" Width="215" Style="{StaticResource GraywithBlueBorderTextBox}" />
        <Button Content="Save" Height="22" HorizontalAlignment="Left" Margin="426,263,0,0" Name="btnSave" VerticalAlignment="Top" Width="90" Click="btnSave_Click" />
        <TreeView Height="443" HorizontalAlignment="Left" Margin="12,27,0,0" Name="trvAccountType" VerticalAlignment="Top" Width="299" SelectedItemChanged="trvAccountType_SelectedItemChanged" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="423,55,0,0" Name="txtAccountType" VerticalAlignment="Top" Width="213" IsReadOnly="True" FontWeight="Bold" Style="{StaticResource GraywithBlueBorderTextBox}" />
        <Label Content="Account No" Height="25" HorizontalAlignment="Left" Margin="349,154,0,0" Name="label3" VerticalAlignment="Top" Width="72" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="422,154,0,0" Name="txtAccountCode" VerticalAlignment="Top" Width="213" Style="{StaticResource GraywithBlueBorderTextBox}" />
        <Label Content="Opening Balance" Height="30" HorizontalAlignment="Left" Margin="322,185,0,0" Name="label4" VerticalAlignment="Top"/>
        <TextBox Height="26" HorizontalAlignment="Left" Margin="424,186,0,0" Name="txtOpeningBalance" TabIndex="8" TextAlignment="Right" ToolTip="Opening Balance" VerticalAlignment="Top" Width="146" PreviewTextInput="txtOpeningBalance_PreviewTextInput" Style="{StaticResource GraywithBlueBorderTextBox}" />
        <ComboBox Margin="576,186,0,0" Name="cmbOpBalanceType" TabIndex="9" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="61" IsEnabled="False" />
        <Label Content="Status" Height="26" HorizontalAlignment="Left" Margin="378,217,0,0" Name="label5" VerticalAlignment="Top" Width="44" />
        <ComboBox Height="24" HorizontalAlignment="Left" Margin="424,219,0,0" Name="cmbStatus" VerticalAlignment="Top" Width="213" />
        <Button Content="Reset" Height="22" HorizontalAlignment="Left" Margin="532,263,0,0" Name="btnReset" VerticalAlignment="Top" Width="90" Click="btnReset_Click" />
        <Label Content="Parent Account No" Height="26" HorizontalAlignment="Left" Margin="312,88,0,0" Name="label6" VerticalAlignment="Top" Width="110" />
        <TextBox Height="26" HorizontalAlignment="Left" Margin="423,89,0,0" Name="txtParentAccountNo" VerticalAlignment="Top" Width="213" Style="{StaticResource GraywithBlueBorderTextBox}" IsReadOnly="True" />
        <!--<ComboBox Height="24" HorizontalAlignment="Left" Margin="422,153,0,0" Name="cmbHeader" VerticalAlignment="Top" Width="215" SelectionChanged="cmbHeader_SelectionChanged" />-->
        <!--<Label Content="Header" Height="24" HorizontalAlignment="Left" Margin="367,151,0,0" Name="label6" VerticalAlignment="Top" Width="50" />-->
    </Grid>
</Window>
