<Window x:Class="CHART_ACC_REPORT.UI.DayBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Day Book" Height="264" Width="392" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" KeyUp="Window_KeyUp" Background="{StaticResource GrayWhite}" ShowInTaskbar="False" Closing="Window_Closing">
    <Grid>
        <Label Content="Select a Date" Height="27" HorizontalAlignment="Left" Margin="19,57,0,0" Name="label1" VerticalAlignment="Top" Width="81" />
        <DatePicker Height="26" HorizontalAlignment="Left" Margin="101,58,0,0" Name="dtpJournalDate" VerticalAlignment="Top" Width="195" />
        <Button Content="Preview" Height="22" HorizontalAlignment="Left" Margin="105,192,0,0" Name="btnPreview" VerticalAlignment="Top" Width="85" Click="btnPreview_Click" />
        <Button Content="Close" Height="22" HorizontalAlignment="Left" Margin="214,191,0,0" Name="btnClose" VerticalAlignment="Top" Width="85" Click="btnClose_Click" />
        <Label Content="Fiscal Period" Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="label2" VerticalAlignment="Top" Width="75" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="90,11,0,0" Name="txtFiscalStartDate" VerticalAlignment="Top" Width="110" IsReadOnly="True" Foreground="Green" IsEnabled="False" />
        <Label Content="to" Height="27" HorizontalAlignment="Left" Margin="198,10,0,0" Name="label3" VerticalAlignment="Top" Width="25" />
        <TextBox Height="25" HorizontalAlignment="Left" Margin="224,10,0,0" Name="txtFiscalEndDate" VerticalAlignment="Top" Width="110" IsReadOnly="True" Foreground="Green" IsEnabled="False" />
        <RadioButton Content="Receive" Height="16" HorizontalAlignment="Left" Margin="99,102,0,0" Name="rdReceive" VerticalAlignment="Top" />
        <RadioButton Content="Journal" Height="16" HorizontalAlignment="Left" Margin="214,102,0,0" Name="rdJournal" VerticalAlignment="Top" />
        <RadioButton Content="Payment" Height="16" HorizontalAlignment="Left" Margin="99,129,0,0" Name="rdPayment" VerticalAlignment="Top" />
        <RadioButton Content="Contra" Height="16" HorizontalAlignment="Left" Margin="214,129,0,0" Name="rdContra" VerticalAlignment="Top" />
        <RadioButton Content="All Transaction" Height="16" HorizontalAlignment="Left" Margin="145,154,0,0" Name="rdAllTransaction" VerticalAlignment="Top" />
    </Grid>
</Window>
